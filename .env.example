# cTrader FIX API Configuration
# Copy this file to .env and fill in your actual credentials

# Your cTrader username (numeric ID)
CTRADER_USERNAME=your_actual_username

# Your cTrader password
CTRADER_PASSWORD=your_actual_password

# Your sender component ID (format: demo.ctrader.YOUR_ID)
SENDER_COMP_ID=demo.ctrader.your_actual_id

# Optional: Override default target settings
TARGET_COMP_ID=cServer
TARGET_SUB_ID=TRADE
SENDER_SUB_ID=TRADE

# Optional: Override default trading parameters
BALANCE=10000.0
MAX_POSITION_SIZE=0.01
MAX_DAILY_LOSS=500.0
RISK_PER_TRADE=0.001
SYMBOL=EURUSD
